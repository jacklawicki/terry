<p id="notice"><%= notice %></p>

<h1>Current Assets</h1>

<table class="table table-hover table-responsive">

  <thead>
  <td><h2>Cash: $<%= @cashes.sum(:value) %></h2></td>
    <tr>
      <th>Tax Entity</th>
      <th>Prior Year</th>
      <th>Current YTD</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

<% @cashes.each do |cash| %>
      <tr>
        <td><%= cash.description %></td>
        <td>$<%= cash.value %></td>
        <td>$<%= cash.value %></td>
        <td><%= link_to 'View Detail', cash %></td>
        <td></td>
      </tr>

    <% end %>
    
    <tr>
        <td><strong>Total</strong></td>
        
        <td> <strong><%= @cashes.sum(:value) %></strong></td>
        <td><strong><%= @cashes.sum(:value) %></strong></td>
        <td> </td>
      </tr>
    <tr>
      <td><%= link_to 'Back', summary_path %> </td>
      <td></td>
      <td></td>
      <td><%= link_to '+ New Cash', new_cash_path %></td>
    </tr>
  </tbody>
</table>



